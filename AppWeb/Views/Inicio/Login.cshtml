@using Obligatorio_Dominio
@model Miembro
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="container mt-3">
    @if (!string.IsNullOrEmpty(ViewBag.error))
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.error
        </div>
    }

    <form action="/inicio/login" method="post" class="mt-3">
        <div class="mb-3">
            <label for="mail" class="form-label">Correo electrónico</label>
            <input type="email" class="form-control form-control-sm" id="mail" name="mail" placeholder="Ingrese su correo" required>
        </div>
        <div class="mb-3">
            <label for="contrasena" class="form-label">Contraseña</label>
            <input type="password" class="form-control form-control-sm" id="contrasena" name="contrasena" placeholder="Ingrese su contraseña" required>
        </div>
        <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
    </form>
</div>
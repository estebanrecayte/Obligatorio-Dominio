@if (ViewBag.SolicitudesPendientes != null && ViewBag.SolicitudesPendientes.Count > 0)
{
    <ul class="list-group">
        @foreach (var invitacion in ViewBag.SolicitudesPendientes)
        {
            <li class="list-group-item">
                <div class="d-flex justify-content-between align-items-center">
                    <strong>@invitacion.MiembroSolicitante.Nombre</strong> te ha enviado una solicitud de amistad.
                    <div class="btn-group" role="group" aria-label="Opciones">
                        <form method="post" action="AceptarSolicitudAmistad" class="mr-2">
                            <input type="hidden" name="invitacionId" value="@invitacion.Id" />
                            <button type="submit" class="btn btn-success">Aceptar</button>
                        </form>

                        <form method="post" action="RechazarSolicitudAmistad">
                            <input type="hidden" name="invitacionId" value="@invitacion.Id" />
                            <button type="submit" class="btn btn-danger">Rechazar</button>
                        </form>
                    </div>
                </div>
            </li>
        }
    </ul>
}
else
{
    <p class="mt-3">No tienes solicitudes de amistad pendientes en este momento.</p>
}

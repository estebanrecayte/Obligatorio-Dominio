@using Obligatorio_Dominio
@model Miembro
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1>Enviar Invitación</h1>


@if (ViewBag.MiembrosDisponibles != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Correo Electrónico</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var miembro in ViewBag.MiembrosDisponibles)
            {
                <tr>
                    <td>@miembro.Nombre</td>
                    <td>@miembro.Mail</td>
                    <td>
                        <form action="/Miembro/EnviarInvitacion" method="post">
                            <input type="hidden" name="mail" value="@miembro.Mail" />
                            <button type="submit" class="btn btn-primary">Enviar Solicitud</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No hay miembros disponibles.</p>
}
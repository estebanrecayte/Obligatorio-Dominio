@{
}

<div class="container mt-5">
    <h2 class="mb-4">Crear Nuevo Miembro</h2>

    @if (ViewBag.error != null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.error
        </div>
    }

<form action="/Miembro/CreateMiembro" method="post">

    <div class="form-group">
        <label for="string">Correo Electrónico:</label>
        <input type="text" class="form-control" id="mail" placeholder="Ingrese su correo electrónico" name="email" required>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="password">Contraseña:</label>
            <input type="password" class="form-control" id="password" placeholder="Ingrese su contraseña" name="password" required>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="nombre">Nombre:</label>
                <input type="text" class="form-control" id="nombre" placeholder="Ingrese su nombre" name="nombre" required>
            </div>

            <div class="form-group col-md-6">
                <label for="apellido">Apellido:</label>
                <input type="text" class="form-control" id="apellido" placeholder="Ingrese su apellido" name="apellido" required>
            </div>
        </div>

        <div class="form-group col-md-6">
            <label for="fechaNacimiento">Fecha de Nacimiento:</label>
            <input type="date" class="form-control" id="fechaNacimiento" name="fechaNacimiento" required>
        </div>
    </div>

    <br />
    <br />
    <button type="submit" class="btn btn-primary">Registrarse</button>

</form>
</div>
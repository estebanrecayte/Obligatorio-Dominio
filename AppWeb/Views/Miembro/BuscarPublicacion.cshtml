@using Obligatorio_Dominio
@model Publicacion

@{
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <h2>Buscar Publicaciones</h2>
            @using (Html.BeginForm("FiltrarPublicaciones", "Miembro", FormMethod.Get, new { @class = "form" }))
            {
                <div class="form-group">
                    <label for="textoBusqueda">Texto de Búsqueda:</label>
                    <input type="text" name="textoBusqueda" class="form-control" />
                </div>

                <div class="form-group">
                    <label for="valorAceptacion">Valor de Aceptación:</label>
                    <input type="number" name="valorAceptacion" class="form-control" />
                </div>

                <br />
                <button type="submit" class="btn btn-primary">Buscar</button>
            }
        </div>
    </div>

    @if (ViewBag.PublicacionesFiltradas != null && ViewBag.PublicacionesFiltradas.Count > 0)
    {
        <div class="row mt-4">
            <div class="col-md-6">
                <h3>Resultados de la búsqueda:</h3>
                @foreach (var publicacion in ViewBag.PublicacionesFiltradas)
                {
                    <div class="card mb-2">
                        <div class="card-body">
                            <p class="card-text">@publicacion.Contenido</p>
                            <!-- Muestra otros detalles de la publicación según sea necesario -->
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <div class="row mt-4">
            <div class="col-md-6">
                <p></p>
            </div>
        </div>
    }
</div>
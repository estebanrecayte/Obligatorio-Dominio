@using Obligatorio_Dominio
@model Post

<h2 class="mt-3 mb-4">Mis Publicaciones</h2>

@if (ViewBag.error != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.error
    </div>
}

<div class="row">
    <form asp-action="CrearPublicacion" method="post" class="col-md-6">
        <div class="form-group">
            <label for="Titulo">Título:</label>
            <input asp-for="Titulo" class="form-control" />
        </div>
        <div class="form-group">
            <label for="Contenido">Contenido:</label>
            <textarea asp-for="Contenido" class="form-control" rows="5"></textarea>
        </div>
        <div class="form-group">
            <label for="Imagen">URL de la Imagen:</label>
            <input asp-for="Imagen" class="form-control" />
        </div>
        <div class="form-check">
            <input asp-for="Publico" class="form-check-input" />
            <label class="form-check-label" for="Publico">¿Es público?</label>
        </div>
        <div class="form-check">
            <input asp-for="Censurado" class="form-check-input" />
            <label class="form-check-label" for="Censurado">¿Es censurado?</label>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Publicar</button>
    </form>

    <div class="col-md-6">
        <h3>Mis Publicaciones</h3>
        @if (ViewBag.Posts == null || ViewBag.Posts.Count == 0)
        {
            <p>No tienes publicaciones aún.</p>
        }
        else
        {
            foreach (var publicacion in ViewBag.Posts)
            {
                <div class="card mt-3">
                    <div class="card-body">
                        <h5 class="card-title">@publicacion.Titulo</h5>
                        <p class="card-text">@publicacion.Contenido</p>
                    </div>
                </div>
            }
        }
    </div>
</div>

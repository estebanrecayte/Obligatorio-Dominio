@using Obligatorio_Dominio
@model Publicacion
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h2 class="mt-3 mb-4">Mis Publicaciones</h2>

@if (ViewBag.error != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.error
    </div>
}

<div class="row">
    <div class="col-md-6">
        <h3>Realizar nueva publicación</h3>
        <form asp-action="CrearPublicacion" method="post">
            <div class="form-group">
                <label for="Titulo">Título:</label>
                <input asp-for="Titulo" class="form-control name="Titulo" />
            </div>
            <div class="form-group">
                <label for="Contenido">Contenido:</label>
                <textarea asp-for="Contenido" class="form-control" name="Contenido" rows="5"></textarea>
            </div>
            
            <button type="submit" class="btn btn-primary mt-3">Publicar</button>
        </form>
    </div>
    <div class="col-md-6">
        <h3>Mis Publicaciones</h3>
        @if (@Model != null)
        {
            foreach (var publicacion in ViewBag.Posts)
            {
                <div class="card mt-3">
                    <div class="card-body">
                        <h5 class="card-title">@publicacion.Titulo</h5>
                        <p class="card-text">@publicacion.Contenido</p>
                        <!-- Agrega aquí cualquier otra información que quieras mostrar -->
                    </div>
                </div>
            }
        }
        else
        {
            <p>No tienes publicaciones aún.</p>
        }
    </div>
</div>